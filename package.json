{
  "name": "2do",
  "version": "0.1.0",
  "main": "public/electron.js",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn react:dev\" \"wait-on http://localhost:3000 && yarn electron:dev\"",
    "react:dev": "cross-env BROWSER=none react-scripts start",
    "react:build": "react-scripts build",
    "electron:dev": "electron .",
    "preelectron:pack": "yarn react:build",
    "electron:pack": "electron-builder"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "wait-on": "^5.2.0"
  },
  "browserslist": "last 1 electron version",
  "eslintConfig": {
    "extends": "react-app"
  },
  "homepage": "./",
  "build": {
    "appId": "io.github.2done.2do-electron",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}