{
  "name": "2do",
  "version": "0.1.0",
  "main": "public/electron.js",
  "description": "A complete todo app for you or your company",
  "author": "2DON (https://github.com/2DON)",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn react:dev\" \"wait-on http://localhost:3000 && yarn electron:dev\"",
    "react:dev": "cross-env BROWSER=none react-scripts start",
    "prereact:build": "yarn run lint:fix",
    "react:build": "cross-env GENERATE_SOURCEMAP=false react-scripts build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "prebuild": "yarn run react:build",
    "build": "yarn run electron:build",
    "lint": "eslint . --ignore-path .gitignore --ext .js,.jsx --cache",
    "lint:fix": "yarn run lint --fix",
    "postlint:fix": "prettier --ignore-path .gitignore --single-quote --write ./**/*.{md,mdx,js,jsx,json,html,css,less,scss,yaml,yml}"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@imaginary-cloud/eslint-config-react": "1.0.1",
    "@imaginary-cloud/prettier-config": "^1.0.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.1",
    "wait-on": "^5.2.0"
  },
  "browserslist": "last 1 electron version",
  "eslintConfig": {
    "extends": "@imaginary-cloud/react"
  },
  "prettier": "@imaginary-cloud/prettier-config",
  "homepage": "./",
  "build": {
    "appId": "io.github.2don.2do-electron",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,mdx,js,jsx,json,html,css,less,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
